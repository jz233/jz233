                <!-- comment section-->
                <div id="right">
                	<div id="comment_header" style="width:95%; height:5%; text-align:center; font-size:25px;">Comments</div>
                    
                	<form id="comment_form" class="comment_form" method="post" >
                		<div class="features">
                			<div>
                    			<input type="hidden" name="matchid" value="${matchid}">
							</div>
	                        <div class="style">
