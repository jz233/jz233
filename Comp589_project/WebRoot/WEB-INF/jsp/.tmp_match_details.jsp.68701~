	<script type="text/javascript">
		var resReview = [];	//array
//		var pageNumber ;
		$(document).ready(
			function(){
//				$(".scroll").load
				$.get("${pageContext.request.contextPath}/jz233/toQueryReview.do?matchid=" + '${matchid}',
					function(response){
						$(".title").html(response.title);
//							$(".scroll").html(response.review);
						resReview = response.review;
						console.log(resReview[2]);
						loadPage(0);
				});
				loadComments();
				longPolling();
			}
			
		);
		function loadPage(pgnumber){
			for(var i=pgnumber*12; i<(pgnumber+1)* 12 && i<resReview.length;i++){
				$(".scroll").append(resReview[i]);
				if(i ==  (pgnumber +1)*12-1){
					$(".scroll").append("<a class=\"more\" href=\"javascript:return false;\">Read More</a>");
					$(".more").live("click",function(){
						$(".more").remove();
						loadPage(++pgnumber);
						
					});
				}
			}
			
		}
		
		$("#submit_comment").click(function(){

			var formData = $("form").serialize();	
			console.log(formData);
			$.post("${pageContext.request.contextPath}/jz233/toComment.do",
							formData,
							function(data){
								console.log(data);
								
							}
							
			).fail(function(){alert("error");});
		});
		
		function loadComments(){
			$.ajax({
				url: "${pageContext.request.contextPath}/jz233/toLoadComments.do",
				type: "GET",
				data: {
					matchid: '${matchid}'
				},
				success: function(response){		//comment list
					showList(response);
				}
				
			});
		}
		function showList(cmtList){
			var info = "";
			$.each(cmtList,function(index, object){
				
				info += "<div class=\"cmtContainer\"><span class=\"cmtUser\">user"
				+object.commentTime+"</span><span class=\"cmtContent\">"
				+object.description+"</span><div class=\"cmtFeature\"><span class=\"cmtStyle\">"
				+object.matchStyle+"</span><span class=\"cmtTempo\">"
				+object.matchTempo+"</span><span class=\"cmtIntensity\">"
				+object.matchIntensity+"</span></div></div>";
				
			});
			$(".commentList").html(info);
		}
		function setupCommentListener(){
			var currTime = new Date().getTime();
			$.ajax({
				url: '${pageContext.request.contextPath}/jz233/toListenNewComments.do',
				type: 'GET',
				data:{
					currentTime: currTime					
				},
				success: function(){
					
				}
			});
		}
		function longPolling() {
                $.ajax({
                    url: "${pageContext.request.contextPath}/jz233/toListenNewComments.do",
					type:"GET",
                    data: {
						matchid: '${matchid}',
						currentTimeStamp:  Date.now()
					},
                    timeout: 5000,
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        if (textStatus == "timeout") { 
							console.log("timeout");
                            longPolling(); // 递归调用
                        } else { 
							console.log("error"),
                            longPolling();
                        }
                    },
                    success: function (data, textStatus) {
                        if (textStatus == "success") { // 请求成功
                            console.log("success");
							var info = "";
							console.log(data.length);
							if(data.length >0){
								$.each(data, function(index, object){
									info += "<div class=\"cmtContainer\"><span class=\"cmtUser\">user"
									+object.commentTime+"</span><span class=\"cmtContent\">"
									+object.description+"</span><div class=\"cmtFeature\"><span class=\"cmtStyle\">"
									+object.matchStyle+"</span><span class=\"cmtTempo\">"
									+object.matchTempo+"</span><span class=\"cmtIntensity\">"
									+object.matchIntensity+"</span></div></div>";
								});
								$(".commentList").append(info);
							}
							
							
							
							setTimeout(longPolling,3000);
							
                        }
                    }
                });
			}
    </script>
